<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Settings"
        android:layout_marginTop="20sp"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:fontFamily="@font/font_med"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDITIONAL"
        android:layout_marginTop="40dp"
        android:textColor="@color/green"
        android:fontFamily="@font/font_med"
        android:layout_marginStart="5sp" />
    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="122dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/card_background"
        app:cardCornerRadius="5dp"
        app:cardElevation="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/light_card_background"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/baseline_favorite_border_24"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_med"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    android:textSize="22sp"/>
            </LinearLayout>
            <View
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="@color/light_card_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/light_card_background"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/baseline_language_24"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_med"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    android:textSize="22sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERAL"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:fontFamily="@font/font_med"
            android:layout_marginStart="5sp" />
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="122dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/light_card_background"
                        app:cardCornerRadius="50dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/baseline_star_outline_24"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate us"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_med"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="10dp"
                        android:textSize="22sp"/>
                </LinearLayout>
                <View
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:background="@color/light_card_background"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/light_card_background"
                        app:cardCornerRadius="50dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10dp">
                        <ImageView
                            style="@style/cardIconThemeWhite"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/share"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_med"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="10dp"
                        android:textSize="22sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTHERS"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:fontFamily="@font/font_med"
            android:layout_marginStart="5sp" />
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="122dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/light_card_background"
                        app:cardCornerRadius="50dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/baseline_feed_24"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_med"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="10dp"
                        android:textSize="22sp"/>
                </LinearLayout>
                <View
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:background="@color/light_card_background"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/light_card_background"
                        app:cardCornerRadius="50dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10dp">
                        <ImageView
                            style="@style/cardIconThemeWhite"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/insurance"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_med"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="10dp"
                        android:textSize="22sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>