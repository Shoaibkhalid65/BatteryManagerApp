<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/properties_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/properties_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Properties"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:fontFamily="@font/font_med"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_capacity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="Remaining Capacity"/>
            <TextView
                android:id="@+id/tv_capacity_val"
                app:layout_constraintTop_toBottomOf="@id/tv_capacity"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="30dp"
                android:fontFamily="@font/font_med"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="99"
                android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_capacity"
                    app:layout_constraintStart_toEndOf="@id/tv_capacity_val"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginTop="12sp"
                    android:layout_marginStart="4dp"/>
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/battery_charging_svgrepo_com__1_"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_charge_counter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Charge Counter"/>
                <TextView
                    android:id="@+id/tv_charge_counter_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_charge_counter"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2439013"
                    android:fontFamily="@font/font_med"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_charge_counter"
                    app:layout_constraintStart_toEndOf="@id/tv_charge_counter_val"
                    android:text="µAh"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="12sp"
                    android:layout_marginStart="4dp"/>
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/battery_charging_svgrepo_com__4_"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_current_average"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Current Average"/>
                <TextView
                    android:id="@+id/tv_current_average_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_average"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_med"
                    android:layout_marginStart="8dp"
                    android:text="-2147483648"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_average"
                    app:layout_constraintStart_toEndOf="@id/tv_current_average_val"
                    android:text="µA"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="12sp"
                    android:layout_marginStart="4dp"/>
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/battery_charging_svgrepo_com__2_"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_energy_counter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:text="Energy Counter"/>
                <TextView
                    android:id="@+id/tv_energy_counter_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_energy_counter"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/font_med"
                    android:text="-9223372"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_energy_counter"
                    app:layout_constraintStart_toEndOf="@id/tv_energy_counter_val"
                    android:text="Wh"
                    android:textSize="16dp"
                    android:layout_marginTop="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"/>
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/battery_charge_almost_full_svgrepo_com"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_current_now"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:text="Current Now"/>
                <TextView
                    android:id="@+id/tv_current_now_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_now"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/font_med"
                    android:text="241210"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_now"
                    app:layout_constraintStart_toEndOf="@id/tv_current_now_val"
                    android:text="µA"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="12sp"
                    android:layout_marginStart="4dp"/>
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="25dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/battery_charging_svgrepo_com__3_"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>