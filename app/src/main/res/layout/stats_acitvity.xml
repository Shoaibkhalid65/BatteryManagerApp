<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/stats_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/iv_battery_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stats_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/battery_1"/>
    <TextView
        android:id="@+id/tv_battery_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20%"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/iv_battery_per"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <GridLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_battery_per">
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:backgroundTint="#152220"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_thermometer"
                    android:layout_marginStart="62dp"
                    style="@style/cardIconTheme"/>
                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="31"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_med"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Â°C"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="12dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:backgroundTint="#152220"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_vol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voltage"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_voltage"
                    android:layout_marginStart="62dp"
                    style="@style/cardIconTheme"/>
                <TextView
                    android:id="@+id/tv_voltage"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_med"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="12dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:backgroundTint="#152220"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_health"
                    android:layout_marginStart="62dp"
                    style="@style/cardIconTheme"/>
                <TextView
                    android:id="@+id/tv_battery_health"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_med"

                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:backgroundTint="#152220"
            app:cardCornerRadius="5dp"
            app:cardElevation="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technology"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_build"
                    android:layout_marginStart="62dp"
                    style="@style/cardIconTheme"/>
                <TextView
                    android:id="@+id/tv_battery_tech"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Li-ion"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_med"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="type"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>





</androidx.constraintlayout.widget.ConstraintLayout>